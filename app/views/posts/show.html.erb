<%= image_tag @post.image %>
<p><%= @post.body %></p>
<p>Post created by"<%= @user.email %>"</p>
<p>Post created at"<%= @post.created_at %>"</p>

<ul>
  <li><%= link_to "Edit", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
